<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToastAnim_OPEN">
        <item name="android:windowEnterAnimation">@anim/enter</item>
        <item name="android:windowExitAnimation">@anim/out</item>
    </style>

    <style name="ToastAnim_MIUI">
        <item name="android:windowEnterAnimation">@anim/anim_in</item>
        <item name="android:windowExitAnimation">@anim/anim_out</item>
    </style>

    <style name="ToastAnim_ALPHA">
        <item name="android:windowEnterAnimation">@anim/alpha_in</item>
        <item name="android:windowExitAnimation">@anim/alpha_out</item>
    </style>

    <style name="NormalStyle_textAppreance_gray">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">5</item>
        <item name="android:ellipsize">end</item>
        <!--行间距-->
        <item name="android:lineSpacingMultiplier">1.25</item>
        <!--横向间距-->
        <item name="android:letterSpacing">0.05</item>
    </style>


    <style name="NormalStyle_textAppreance_black">
        <item name="android:textColor">@color/white_2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">5</item>
        <item name="android:ellipsize">end</item>
        <!--行间距-->
        <item name="android:lineSpacingMultiplier">1.25</item>
        <!--横向间距-->
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="NormalStyle_textAppreance_white">
        <item name="android:textColor">@color/gray_2</item>
        <item name="android:textSize">15sp</item>
        <item name="android:maxLines">5</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <!--行间距-->
        <item name="android:lineSpacingMultiplier">1.25</item>
        <!--横向间距-->
    </style>



</resources>
