<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_top_bg8"
        android:orientation="vertical">


        <RelativeLayout
            drawable_radius="@{6}"
            drawable_solidColor="@{@color/white}"
            drawable_strokeColor="@{@color/color_dddd}"
            drawable_strokeWidth="@{1}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            >

            <EditText
                android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/close"
                android:background="@null"
                android:hint="Please enter phone number"
                android:inputType="phone"
                android:maxLength="16"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_15"
                android:textColor="@color/black_222628"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp_15"
                android:src="@drawable/icon_edit_close"
                android:visibility="invisible" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="39dp"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">


            <com.evport.businessapp.ui.view.MediumBoldTextView
                android:id="@+id/cancel"
                drawable_radius="@{8}"
                drawable_solidColor="@{@color/white}"
                drawable_strokeColor="@{@color/colorTheme}"
                drawable_strokeWidth="@{1}"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_44"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="#00A0E9"
                android:textSize="14sp" />


            <com.evport.businessapp.ui.view.MediumBoldTextView
                android:id="@+id/tv_ok"
                drawable_radius="@{8}"
                drawable_solidColor="@{@color/colorTheme}"
                drawable_strokeColor="@{@color/colorTheme}"
                drawable_strokeWidth="@{1}"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_44"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/ok"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</layout>