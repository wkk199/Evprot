<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="info"
            type="com.evport.businessapp.data.bean.RecordResp" />

    </data>

    <androidx.cardview.widget.CardView
        drawable_radius="@{10}"
        drawable_solidColor="@{@color/white}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_5"
        android:background="@color/white"
        app:cardElevation="0.1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView

                android:id="@+id/tv_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_toEndOf="@id/iv_img"
                android:fontFamily="@font/manrope_medium"
                android:padding="5dp"
                android:text="@{info.chargeBoxId}"
                android:textColor="@color/dark_text_color"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="111111" />

            <TextView
                drawable_radius="@{4}"
                drawable_solidColor="@{info.isChargingState()?@color/finished20:@color/unavailable20}"
                android:layout_width="72dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_10"
                android:gravity="center"
                android:text="@{info.chargingStateString()}"

                android:textColor="@{info.isChargingState()?@color/finished:@color/unavailable}"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_start_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_id"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/manrope_medium"
                android:gravity="end"
                android:paddingEnd="15dp"
                android:text="@{info.unitString()}"
                android:textColor="@color/red"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="1" />

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_start_date"
                android:layout_alignStart="@id/tv_start_date"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_5"
                android:fontFamily="@font/manrope_medium"
                android:text="@{info.dateString}"
                android:textColor="@color/light_text_color"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_record_item" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</layout>