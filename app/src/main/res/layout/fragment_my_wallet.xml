<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.evport.businessapp.ui.state.MyWalletViewModel" />

        <variable
            name="click"
            type="com.evport.businessapp.ui.page.MyWalletFragment.ClickProxy" />

        <variable
            name="adapter"
            type="androidx.recyclerview.widget.ListAdapter" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_f5"
        android:clipToPadding="true"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/base_title_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_40"
                android:layout_marginBottom="@dimen/dp_10"
                android:src="@drawable/icon_title_logo" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:onClick="@{()->click.back()}"
                    android:src="@drawable/icon_back_gray" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/manrope_semibold"
                    android:text="@string/my_card"
                    android:textColor="@color/color_theme_black"
                    android:textSize="16sp" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/color_line" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/money_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_40"
                android:src="@drawable/icon_money_tag" />

            <TextView
                android:id="@+id/banlance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:text="0.00"
                android:textColor="#ff222825"
                android:textSize="40sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_40"
                android:gravity="center"
                android:layout_marginBottom="@dimen/dp_40"
                android:orientation="horizontal">

                <TextView
                    drawable_radius="@{8}"
                    drawable_solidColor="@{@color/colorTheme}"
                    android:layout_width="140dp"
                    android:layout_height="@dimen/dp_44"
                    android:gravity="center"
                    android:onClick="@{()->click.recharge()}"
                    android:text="充值"
                    android:textColor="#ffffffff"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_marginLeft="@dimen/dp_15"
                    drawable_radius="@{8}"
                    drawable_solidColor="@{@color/colorTheme2}"
                    android:layout_width="140dp"
                    android:layout_height="@dimen/dp_44"
                    android:gravity="center"
                    android:onClick="@{()->click.withdrawal()}"
                    android:text="提现"
                    android:textColor="@color/colorTheme"
                    android:textSize="16sp"
                    />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/money_ll"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/white"
            android:drawableEnd="@drawable/icon_arrow_right"
            android:gravity="center_vertical"
            android:onClick="@{()->click.myCard()}"
            android:padding="@dimen/dp_15"
            android:text="充电卡"
            android:textColor="#ff222825"
            android:textSize="14sp" />

    </RelativeLayout>
</layout>