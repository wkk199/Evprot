<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/dialog_upgrade_progress_background_color" />
            <corners android:radius="@dimen/dialog_upgrade_corner_radius" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:centerColor="@color/dialog_upgrade_progress_background_start_center"
                    android:endColor="@color/dialog_upgrade_progress_background_start_end"
                    android:startColor="@color/dialog_upgrade_progress_background_start_color" />
                <corners android:radius="@dimen/dialog_upgrade_corner_radius" />
            </shape>
        </clip>
    </item>
</layer-list>